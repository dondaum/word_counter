<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <ul class="list-group">
        <li class="list-group-item">
          <h1> <%= @user.username %> </h1>
          <p> E-Mail: <%= @user.email %> <p>
          <p> Registered at: <%= @user.created_at.strftime('%d.%m.%Y') %> <p>
          <p> Member since: <%= member_since %> days <p>
          <p> Number of posted articles: <%= @user.texts.size %> </p>
          <% if current_user == @user %>
          <p> <%= link_to "Delete User", @user, method: :delete, data: {confirm: "Are you sure?"} %><p>
          <% end %>
          <%= link_to "Back", :back %>
          </li>
        </ul>
      </div>
    </div>
  </div>
